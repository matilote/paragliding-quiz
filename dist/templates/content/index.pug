extends ../layout

mixin list($name, $index)
  a(href="/?page=pytanie&cat=".$index."&question=1")
    div(class="box-part text-center")
      div(class="title")
        h5 = $name

block content
  div(class="container")
    section(class="categories")
      div(class="row")
        - $myClasses = ["col-lg-12", "col-md-12", "col-sm-12", "col-xs-12"]
        div(class=$myClasses)
          div(class="head")
            h1 = headTitle
              img(src="https://img.icons8.com/metro/26/000000/paragliding.png" alt="")
        div(class="divider")
      div(class="category-head")
        h2 = categoryTitle
        - $safety = 'safety'
        div(class=$myClasses)
          each $val, $index in categories
            +list($val, $index)
      footer Liczba unikalnych wizyt:
        span(id="count") 123111