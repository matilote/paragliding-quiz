extends ../layout

block links
  link(rel="stylesheet" href="./css/quiz.css")

block scripts
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")

mixin choiceContainer($index, $dataNumber)
  - $answer = question['answers'][$index]['option']
  - $content = question['answers'][$index]['content']
  button(class="choice-container" name="choice-submit" type="submit")
    p(class="prefix") = $answer
    p(class="question-text" data-number=$dataNumber) = $content

block content
  div(class="container")
    form(action="../../script/question.php" method="post")
      div(id="quiz" class="justify-center flex-column")
        - $questionTitle = question['question']['content']
        h2(id="question") = $questionTitle
        +choiceContainer(0, 0, 1)
        +choiceContainer(1, 1, 2)
        +choiceContainer(2, 2, 3)
        +choiceContainer(3, 3, 4)
        div(class="progress-container")
          h2 Quiz progress
          div(
            class="progress" 
            style="height: 3rem; border-radius: 1rem;"
          )
          div(
            class="progress-bar" 
            id="progress-bar" 
            role="progressbar" 
            style="width: 10%; font-size: 1.5rem; background-color: rgb(199, 90, 90);"
          )

